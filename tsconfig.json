{
  "compilerOptions": {
    "outDir": "./dist/lib/",
    "sourceMap": true,
    "noImplicitAny": true,
    "declaration": true,
    "module": "esnext",
    "target": "esnext",
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "skipLibCheck": true,
    "lib": ["esnext", "esnext.decorators", "dom"],
    "types": []
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ]
}
